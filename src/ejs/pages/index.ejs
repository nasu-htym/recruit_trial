<%
/*///////////////////////////////////////////////////////////////////////////

  各種パスの設定 : このエリアはどのテンプレートでも共通です ※編集しないでください

///////////////////////////////////////////////////////////////////////////*/
filename = filename.replace(/\\/g, '/');
ABSOLUTE_PATH = filename.split(config.develop_dir)[filename.split(config.develop_dir).length - 1];
RELATIVE_PATH = '../'.repeat([ABSOLUTE_PATH.split('/').length - 2]);
INCLUDE_PATH = RELATIVE_PATH + 'include/';

include(INCLUDE_PATH + 'tool/_path');
include(INCLUDE_PATH + 'tool/_functions');
/*///////////////////////////////////////////////////////////////////////////

  ここまで編集不可エリア

///////////////////////////////////////////////////////////////////////////*/

/* Local Variables
   ----------------------------------------------------------------- */
// ページ名の設定
const page_name = 'home';

// imgディレクトリへの相対パス
const img_path = assetsRelative() + 'img';

// 定型文
// ダミー文章
const dummy_sent = "この文章はダミーです。文字の大きさ、量、字間、行間等を確認するために入れています。";
// 電話番号
const phone_num = "0120-00-0000";
// 電話受付時間
const tel_message = "10:00～18:00 土日・祝日年末年始除く";
-%>

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="format-detection" content="telephone=no">

  <link rel="shortcut icon" href="<%= img_path; %>/common/favicon.ico">
  
  <!-- Google fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100;400&family=Noto+Sans+JP:wght@100;400;500;700&display=swap" rel="stylesheet">

  <title><%= info[page_name].title; %></title>

  <meta name="description" content="<%= info[page_name].description; %>">
  <meta name="keywords" content="<%= info[page_name].keywords; %>">

  <!-- meta for sns -->
  <meta property="og:title" content="<%= info[page_name].title; %>" />
  <meta property="og:type" content="article" />
  <meta property="og:url" content="<%= info[page_name].url; %>" />
  <meta property="og:image" content="<%= info[page_name].ogp_image; %>" />
  <meta property="og:site_name" content="<%= config.site_name; %>" />
  <meta property="og:description" content="<%= info[page_name].description; %>" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content="<%= info[page_name].title; %>" />
  <meta name="twitter:image" content="<%= info[page_name].ogp_image; %>" />
  <meta name="twitter:description" content="<%= info[page_name].description; %>" />

  <!-- local CSS -->
  <%- include(INCLUDE_PATH + 'foundation/_styles', { css_path: assetsRelative() + 'css' }); -%>
</head>

<body id="<%= page_name; %>">
<div id="top"></div>

<%# start page content -%>
<!-- header -->
<header id="header" class="header-top">
<div id="overlay-menu" class="overlay-menu hidden">
  <div id="close">×</div>
  <div class="title-wrap">
    <div class="title">日本ALO音楽研究所</div>
    <div class="border"></div>
  </div>
  <div class="content-wrap">
    <div class="contact-menu">
      <div class="mail-wrap">
        <div class="icon">
          <img src="<%= img_path + '/mail.png' %>">
        </div>
        <div class="txt">メールでのお問い合わせ</div>
        <div class="contact-wrap">
          <a href="#">お問い合わせ</a>
        </div>
      </div>
      <div class="tel-wrap">
        <div class="icon">
          <img src="<%= img_path + '/tel.png' %>">
        </div>
        <div class="txt">お電話でのお問い合わせ</div>
        <div class="txt-wrap">
          <div class="tel-num"><%= phone_num %></div>
          <div class="message"><%= tel_message %></div>
        </div>
      </div>
    </div>
    <div class="alo-content">
      <ul>
        <li>ALOについて</li>
        <li>ALOの強み</li>
        <li>ALOの商品紹介</li>
        <li>ご加入までの流れ</li>
        <li>よくあるご質問</li>
